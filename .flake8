[flake8]
max-line-length=100
docstring-convention=all
import-order-style=pycharm
application-import-names=pylox,tests
ignore=
    P102,B311,W503,E203,E226,S311,
    # Missing Docstrings
    D100,D104,D105,D107,
    # Docstring Whitespace
    D203,D212,D214,D215,
    # Docstring Quotes
    D301,D302,
    # Docstring Content
    D400,D401,D402,D404,D405,D406,D407,D408,D409,D410,D411,D412,D413,D414,D416,D417,
    # Type Annotations
    ANN002,ANN003,ANN101,ANN102,ANN204,ANN206,
    # pep8-naming
    N802,N806,N815,
exclude=
    __pycache__,.cache,
    venv,.venv,
per-file-ignores =
    pylox/protocols/*.py:D101 D102,
    pylox/ast_printer.py:D102,
    pylox/builtins.py:D101,
    pylox/error.py:D101,
    pylox/grammar.py:D101 D102,
    pylox/interpreter.py:D102,
    pylox/lox.py:B008,
    tests/*/test_*.py:D103 E501,
    tool/generate_ast.py:B008,
    tool/generate_tests.py:B008 E501,
